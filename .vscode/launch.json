{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "pytest: Debug Unit Tests",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
        "-m", "unit",
        "-v",
        "--no-cov"
      ],
      "console": "integratedTerminal",
      "justMyCode": false
    },
    {
      "name": "pytest: Debug Integration Tests",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
        "-m", "integration",
        "-v",
        "--no-cov"
      ],
      "console": "integratedTerminal",
      "justMyCode": false
    },
    {
      "name": "pytest: Debug E2E Tests",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
        "-m", "e2e",
        "-v",
        "--no-cov"
      ],
      "console": "integratedTerminal",
      "justMyCode": false
    },
    {
      "name": "pytest: Debug Performance Tests",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
        "-m", "performance",
        "-v",
        "--no-cov"
      ],
      "console": "integratedTerminal",
      "justMyCode": false
    },
    {
      "name": "pytest: Debug Current File",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
        "${file}",
        "-v",
        "--no-cov"
      ],
      "console": "integratedTerminal",
      "justMyCode": false
    }
  ]
}
