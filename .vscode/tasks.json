{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "pytest: Run Unit Tests",
      "type": "shell",
      "command": "${workspaceFolder}/.venv/Scripts/python.exe",
      "args": ["-m", "pytest", "-m", "unit", "-v"],
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "pytest: Run Integration Tests",
