{
  "appId": "com.yourcompany.ninebox",
  "productName": "9Boxer",
  "copyright": "Copyright Â© 2025 Your Company",
  "directories": {
    "output": "release"
  },
  "files": [
    "dist/**/*",
    "dist-electron/**/*",
    "package.json"
  ],
  "extraResources": [
    {
      "from": "../backend/dist/ninebox",
      "to": "backend",
      "filter": ["**/*"]
    },
    {
      "from": "dist",
      "to": "app/dist",
      "filter": ["**/*"]
    },
    {
      "from": "build/icon.png",
      "to": "icon.png"
    },
    {
      "from": "../USER_GUIDE.html",
      "to": "USER_GUIDE.html"
    }
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ],
    "icon": "build/icon.ico",
    "artifactName": "${productName}-${version}-Windows-${arch}.${ext}",
    "signAndEditExecutable": false
  },
  "mac": {
    "target": ["dmg"],
    "icon": "build/icon.icns",
    "category": "public.app-category.business",
    "artifactName": "${productName}-${version}-macOS-${arch}.${ext}"
  },
  "linux": {
    "target": ["AppImage"],
    "icon": "build/icon.png",
    "category": "Office",
    "artifactName": "${productName}-${version}-Linux-${arch}.${ext}"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "allowElevation": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "9Boxer",
    "uninstallDisplayName": "9Boxer"
  },
  "dmg": {
    "title": "${productName} ${version}"
  },
  "publish": null
}
